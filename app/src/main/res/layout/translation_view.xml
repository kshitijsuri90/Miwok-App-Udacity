<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/descriptive_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@color/tan_background"
        android:contentDescription="@string/translation_visual_aid"
        android:padding="8dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/miwok_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/descriptive_image"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/descriptive_image"
        android:layout_toRightOf="@id/descriptive_image"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="lutti" />

    <TextView
        android:id="@+id/english_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miwok_translation"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/descriptive_image"
        android:layout_toRightOf="@id/descriptive_image"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="one" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/play"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
